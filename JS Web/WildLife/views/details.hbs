<section id="details-page">

    <div class="main_card">
        <div class="card_left">
            <div class="card_datails">

                <h1>Title: {{mappedPost.title}}</h1>
                <h3>Created by an author: {{mappedPost.author.firstName}} {{mappedPost.author.lastName}}</h3>
                <div class="card_animal">
                    <p class="card-keyword">Keyword: {{mappedPost.keyword}}</p>
                    <p class="card-location">Location: {{mappedPost.location}}</p>
                    <p class="card-date">Date: {{mappedPost.date}}</p>
                </div>

                <p class="disc">Description: {{mappedPost.description}}</p>

                {{#if hasUser}}
                <div class="social-btn">
                    {{#if isAuthor}}
                    <a href="/edit/{{mappedPost.id}}" class="edit-btn">Edit</a>
                    <a href="/delete/{{mappedPost.id}}" class="del-btn">Delete</a>
                    {{else}}
                        {{#if hasVoted}}
                    <p class="thanks-for-vote">Thanks For Voting</p>
                        {{else}}
                    <a href="/upvote/{{mappedPost.id}}" class="vote-up">UpVote +1</a>
                    <a href="/downvote/{{mappedPost.id}}" class="vote-down">DownVote -1</a>
                        {{/if}}
                    {{/if}}
                </div>
                {{/if}}
            </div>
        </div>
        <div class="card_right">
            <img src="{{mappedPost.image}}" alt="image">
        </div>
    </div>

</section>

<section id="votes">
    <div class="vote-info">
        <div class="card_left">
            <div class="card_datails">
                <h1>Votes</h1>
                <div class="card_vote">

                    <p class="PV">Total rating of votes: {{mappedPost.rating}}</p>
                </div>
                {{#if mappedPost.votes}}
                <p class="disc">People who voted for the post - {{voters}}</p>
                {{else}}
                <p class="disc">People who voted for the post - No one has voted yet.</p>
                {{/if}}
            </div>
        </div>
    </div>
</section>