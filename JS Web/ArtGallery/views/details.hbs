<section id="details-page">
    <h1>Details</h1>
    <article class="details-card">

        <article class="details-card-text">
            <h2>Title:<br> {{pub.title}}</h2>
            <h3>Author: {{pub.author.username}}</h3>
            <h3>Painting technique: {{pub.tech}}</h3>
            <h3>Certificate of authenticity: {{pub.certificate}}</h3>

            {{#if hasUser}}
            <div class="buttons">
                {{#if pub.isAuthor}}
                <a href="/edit/{{pub._id}}" class="btn-edit">Edit</a>
                <a href="/delete/{{pub._id}}" class="btn-delete">Delete</a>
                {{else}}
                    {{#if userHasLiked}}
                <p class="shared-pub">You already shared this publication</p>
                    {{else}}
                <a href="/share/{{pub._id}}" class="btn-share">Share publication</a>
                    {{/if}}
                {{/if}}
            </div>
            {{/if}}
        </article>

        <article class="details-card-image">
            <img src="{{pub.picture}}" alt="art-image2">
        </article>

    </article>
</section>